<body>
    <section>
<!-- WRAPPER -->
<div id="wrapper">
    <!-- MAIN -->
    <div class="main">
        <!-- MAIN CONTENT -->
        <div class="main-content">
            <div class="container-fluid">
                <h3 class="page-title">User Manager</h3>
                <input type ="button" name="abc" value="Add User"></br></br>
                <div class="list-product">
                    <div>
                        <table id="productTable">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>User Name</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT -->
        </div>
    </div>
</div>
    </section>
<!-- END WRAPPER -->
<script type="text/javascript" src="http://code.jquery.com/jquery-1.7.1.min.js"></script>
<script>
    var tbody = $('#productTable tbody');
  
    
    {{#each users}}
    var tr= $('<tr>').appendTo(tbody);
    tr.append('<td>'+'{{id}}'+'</td>');
    tr.append('<td>'+'{{name}}'+'</td>');
    tr.append('<td>'+'{{username}}'+'</td>');
    tr.append('<td>'+'{{email}}'+'</td>');
    if('{{userrole}}'=="role_user")
        tr.append('<td>'+'User'+'</td>');
    else
         tr.append('<td>'+'Admin'+'</td>');
    tr.append(' <td><abc>Delete</abc></td>');
    tr.append('<td><a href="/admin/delete-user/'+'{{id}}'+'" onclick="return ConfirmDelete()">Delete'+'</td>');
    
    {{/each}}

    function ConfirmDelete()
    {
      var x = confirm("Are you sure you want to delete?");
      if (x)
          return true;
      else
        return false;
    }
</script>