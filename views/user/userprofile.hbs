	<section id="form2"><!--form-->
		<div class="container">
			<div class="row">
                <div class="col-sm-10 col-sm-offset-3">	
                    <h2>Your Profile</h2>
                    <div class="signup-form">
                        <form name="signupform" action="/users/userprofile" method="post">		
                        <table class="col-sm-6">
                            <tr>
                                <td>Create Time:</td>
                                <td><input type="text" name="creatime" value={{#formatDate}}{{user.createtime}}{{/formatDate}} readonly/></td>
                            </tr>
                            <tr>
                                <td>User Name:</td>
                                <td><input type="text" name="username" value={{user.username}} readonly/></td>
                            </tr>
                            <tr>
                                <td>E-mail:</td>
                                <td><input type="text" name="email" class="field left" value={{user.email}} readonly/></td>
                            </tr>
                            <tr>
                                <td>Name:</td>
                                <td><input type="text" name="name" value={{user.name}}></input></td>
                            </tr>
                            <tr>
                                <td>Date Of Birth:</td>
                                <td><input type="text" name="dob" value={{user.dob}}></input></td>
                            </tr>
                            <tr>
                                <td>Address:</td>
                                <td><input type="text" name="address" value={{user.address}}></input></td>
                            </tr>
                            <tr>
                                <td><button type="submit" class="btn btn-default">Save</button></td>
                                <td><a href="/users/history" class="btn btn-default btn-link">View the historical payment</a></td>
                            </tr>
                        </table>     
                        </form>
                    </div>
				</div>
			</div>
		</div>
	</section><!--/form-->