<section id="cart_items">
    <div class="container">
        <div class="review-payment">
            <h2>Order History</h2>
        </div>

        <div class="table-responsive cart_info">
            <table class="table table-condensed">
                <thead>
                <tr class="cart_menu">
                    <td></td>
                    <td>Order Time</td>
                    <td>Address</td>
                    <td>Total</td>
                    <td>Status</td>
                </tr>
                </thead>
                <tbody>
                <tr>
                {{#each bills}}
                        <td></td>
                    <td>{{date}}</td>
                    <td>{{address}}</td>
                    <td>${{total}}</td>
                    <td>
                        {{status}}
                    </td>
                </tr>

                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section> <!--/#cart_items-->